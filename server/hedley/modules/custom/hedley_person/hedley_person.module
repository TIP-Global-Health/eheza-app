/**
 * Implements hook_menu().
 */
function hedley_person_menu() {
  $items = [];

  $items['admin/content/import'] = [
    'type' => MENU_LOCAL_TASK,
    'title' => 'Import patients',
    'description' => 'Import participants form spreadsheet on Google Drive',
    'page callback' => 'drupal_get_form',
    'page arguments' => ['hedley_person_import_form'],
    'access callback' => 'hedley_admin_administrators_access',
    'weight' => 1,
  ];

  return $items;
}

/**
 * Patients import form. Form content changes based on step we're at.
 *
 * @param array $form
 *   The form being processed.
 * @param array $form_state
 *   The form state.
 *
 * @return array
 *   Form array.
 */
function hedley_person_import_form(array $form, array &$form_state) {
  if (empty($form_state['storage'])) {
    return hedley_person_get_data($form, $form_state);
  }

  switch ($form_state['storage']['step']) {
    case 'confirmation':
      return hedley_person_confirmation($form, $form_state);

    case 'summary':
      return hedley_person_summary($form, $form_state);
  }
}

/**
 * Patients import form - step 1.
 *
 * Presents input for Google spreadsheet ID, with patients data.
 *
 * @param array $form
 *   The form being processed.
 * @param array $form_state
 *   The form state.
 *
 * @return array
 *   Form array.
 */
function hedley_person_get_data(array $form, array $form_state) {
  $form['#prefix'] = '<div id="get-data-form-wrapper">';
  $form['#suffix'] = '</div>';
  $form['#tree'] = TRUE;

  $import_instructions_uri = variable_get('hedley_import_instructions_uri', 'https://gizra.github.io/eheza-guide/docs/importing-patient-data-in-bulk-backend');

  $instructions = "<div>Before uploading new patients, make sure you followed <a href=\"$import_instructions_uri\" target=\"_blank\">these guidelines</a>.</div>";
  $instructions .= '<br>';
  $instructions .= '<div style="font-style: italic;">Note: You\'ll need to import the mother/caregiver data first, then the children data, in order to create relationships between the two.</div>';

  $form['instructions'] = [
    '#markup' => $instructions,
    '#type' => 'item',
  ];

  $form['spreadsheet_id'] = [
    '#title' => 'Please enter Google spreadsheet ID you wish to import',
    '#type' => 'textfield',
    '#default_value' => '',
    '#maxlength' => 60,
    '#required' => TRUE,
  ];

  $form['actions']['submit'] = [
    '#type' => 'submit',
    '#value' => t('Process'),
    '#submit' => ['hedley_person_import_get_data'],
    '#limit_validation_errors' => [],
    '#ajax' => array(
      'wrapper' => 'get-data-form-wrapper',
      'callback' => 'hedley_person_import_form_callback',
      'effect' => 'fade',
    ),
  ];

  return $form;
}

