/**
 * Get a relationships by a person.
 *
 * @param int $child_id
 *   The node ID of child.
 * @param string $relation_type
 *   Optional; the type of the relation, can be either "parent" or "caregiver".
 *
 * @return array
 *   Node IDs if they exist or empty array if no nodes exist.
 */
function hedley_person_get_child_relationships($child_id, $relation_type = 'parent') {
  $query = hedley_general_create_entity_field_query_excluding_deleted();
  $query
    ->entityCondition('entity_type', 'node')
    ->propertyCondition('type', 'relationship')
    ->propertyCondition('status', NODE_PUBLISHED)
    ->fieldCondition('field_related_to', 'target_id', $child_id)
    ->fieldCondition('field_related_by', 'value', $relation_type);

  $result = $query->execute();

  return !empty($result['node']) ? array_keys($result['node']) : [];
}

/**
 * Implements hook_node_presave().
 *
 * If person is marked as deleted, verifies it got no measurements.
 */
function hedley_person_node_presave($node) {
  if ($node->type != 'person') {
    return;
  }

  // We don't make the checks for newly created nodes, because
  // node label is set by auto-label setting on creation, and
  // new person can't be created with 'deleted = TRUE'.
  if (empty($node->nid)) {
    return;
  }

  $wrapper = entity_metadata_wrapper('node', $node);

  // Set node label.
  $first_name = $wrapper->field_first_name->value();
  $second_name = $wrapper->field_second_name->value();

  if (!empty($first_name) || !empty($second_name)) {
    $title = empty($first_name) ? $second_name : "$second_name $first_name";
    $wrapper->title->set($title);
  }

  // If being deleted, verify person got no measurements.
  $deleted = $wrapper->field_deleted->value();
  if (!isset($deleted) || $deleted === FALSE) {
    return;
  }

  $measurements_ids = hedley_general_get_person_measurements($node->nid);
  $count = count($measurements_ids);
  if ($count == 0) {
    return;
  }

  $measurements_list = implode(', ', $measurements_ids);
  watchdog('hedley_person', 'Failed to mark person @nid as deleted: @message', [
    '@nid' => $node->nid,
    '@message' => "Person got measurements: $measurements_list",
  ], WATCHDOG_ERROR);
  drupal_set_message(t('Person got measurements. Can not be marked as Deleted.'), 'error');
  // Restore 'undeleted' status.
  $wrapper->field_deleted->set(FALSE);
}

/**
 * Implements hook_node_update().
 *
 * When child age is edited, updates graduation date for all
 * it's pmtct_participants.
 */
function hedley_person_node_update($node) {
  if ($node->type == 'person') {
    hedley_person_process_birth_date_update($node);
  }

  $field_instance = field_info_instance('node', 'field_deleted', $node->type);
  if (!empty($field_instance)) {
    hedley_person_process_deleted_update($node);
  }
}

/**
 * Invoked from hook_node_update().
 *
 * When child age is edited, updates graduation date for all
 * it's pmtct_participants.
 */
function hedley_person_process_birth_date_update($node) {
  $wrapper = entity_metadata_wrapper('node', $node);
  $wrapper_orig = entity_metadata_wrapper('node', $node->original);

  $birth_date = $wrapper->field_birth_date->value();
  $birth_date_orig = $wrapper_orig->field_birth_date->value();

  if (empty($birth_date) || $birth_date === $birth_date_orig) {
    return;
  }

  $ids = hedley_person_pmtct_participants_for_person($node->nid);
  if (empty($ids)) {
    return;
  }

  $participants = node_load_multiple($ids);
  foreach ($participants as $participant) {
    $participant_wrapper = entity_metadata_wrapper('node', $participant);

    $expected = $participant_wrapper->field_expected->value();
    $expected_new_start_date = date('Y-m-d', $birth_date);
    $expected_new_end_date = date('Y-m-d', strtotime("+26 month", $birth_date));

    $clinic_type = $participant_wrapper->field_clinic->field_group_type->value();
    // We do not change graduation date for 'Sorwathe' group participants.
    if (empty($clinic_type) || !hedley_person_graduation_date_required($clinic_type)) {
      $expected_new_end_date = $expected['value2'];
    }

    $participant_wrapper->field_expected->set([
      'value' => $expected_new_start_date,
      'value2' => $expected_new_end_date,
    ]);
    $participant_wrapper->save();
  }
}

/**
 * Returns if clinic participation requires setting a graduation date, or not.
 *
 * ACHI and SORWATHE clinics do not require setting graduation date.
 * All others do.
 *
 * @param string $clinic_type
 *   The type of the clinic.
 *
 * @return bool
 *   True, if clinic participation requires setting a graduation date.
 */
function hedley_person_graduation_date_required($clinic_type) {
  if (in_array($clinic_type,
    [
      HEDLEY_PERSON_CLINIC_TYPE_SORWATHE,
      HEDLEY_PERSON_CLINIC_TYPE_ACHI,
    ]
  )) {
    return FALSE;
  }

  return TRUE;
}

/**
 * Invoked from hook_node_update().
 *
 * When child age is edited, updates graduation date for all
 * it's pmtct_participants.
 */
function hedley_person_process_deleted_update($node) {
  $wrapper = entity_metadata_wrapper('node', $node);
  $wrapper_orig = entity_metadata_wrapper('node', $node->original);

  $deleted = $wrapper->field_deleted->value();
  $deleted_orig = $wrapper_orig->field_deleted->value();

  if (!isset($deleted) || $deleted === $deleted_orig) {
    return;
  }

  if ($node->type == 'person') {
    $ids = hedley_person_content_affected_by_deletion($node->nid);
    if (empty($ids)) {
      return;
    }

    $items = node_load_multiple($ids);
    foreach ($items as $item) {
      $item_wrapper = entity_metadata_wrapper('node', $item);
      $item_wrapper->field_deleted->set($deleted);
      $item_wrapper->save();
    }
  }
  elseif ($node->type == 'individual_participant' && $deleted) {
    // When "deleting" individual participant, "delete" all its encounters too.
    $encounters_ids = hedley_person_load_individual_participant_encounters_ids($node->nid);
    foreach ($encounters_ids as $encounter_id) {
      $item_wrapper = entity_metadata_wrapper('node', $encounter_id);
      $item_wrapper->field_deleted->set($deleted);
      $item_wrapper->save();
    }
  }
  else {
    $encounter_types = hedley_general_get_encounter_types();
    $encounter_types[] = 'session';

    if (in_array($node->type, $encounter_types) && $deleted) {
      $measurements_ids = hedley_person_load_individual_encounter_measurements_ids($node->nid);
      foreach ($measurements_ids as $measurement_id) {
        $item_wrapper = entity_metadata_wrapper('node', $measurement_id);
        $item_wrapper->field_deleted->set($deleted);
        $item_wrapper->save();
      }
    }
  }
}

/**
 * Resolves all pmtct_participant nodes IDs for person.
 *
 * @param int $person_id
 *   Child node ID.
 *
 * @return array
 *   List of pmtct_participant nodes IDs.
 */
function hedley_person_pmtct_participants_for_person($person_id) {
  $association_fields = [
    'field_person',
    'field_adult',
  ];
  $entries = hedley_general_get_person_content_associated_by_fields($person_id, $association_fields);

  $ids = [];
  foreach ($entries as $entry) {
    if ($entry->bundle == 'pmtct_participant') {
      $ids[] = $entry->entity_id;
    }
  }

  return $ids;
}

/**
 * Resolves person individual_participant nodes IDs, for given encounter types.
 *
 * @param int $nid
 *   Person node ID.
 * @param array $types
 *   Encounter types.
 * @param string $order
 *   Sorting order.
 *
 * @return array
 *   List of individual participant nodes IDs.
 */
function hedley_person_individual_participants_for_person($nid, array $types, $order = 'ASC') {
  $query = hedley_general_create_db_select_query_excluding_deleted();
  $query->join('field_data_field_person', 'p', 'p.entity_id = n.nid');
  $query->leftJoin('field_data_field_encounter_type', 'et', 'et.entity_id = p.entity_id');

  $query->condition('n.type', 'individual_participant');

  $query->condition('et.field_encounter_type_value', $types, 'IN');
  $query->condition('p.field_person_target_id', $nid);
  $query->addField('n', 'nid');
  $query->orderBy('n.nid', $order);

  return $query->execute()->fetchCol();
}

/**
 * Resolves the encounters IDs associated with an individual participant.
 *
 * @param int $nid
 *   Individual participant node ID.
 *
 * @return array
 *   An array of encounters nodes IDs associated with the participant.
 */
function hedley_person_load_individual_participant_encounters_ids($nid) {
  $query = hedley_general_create_db_select_query_excluding_deleted();
  $query->join('field_data_field_individual_participant', 'p', 'p.entity_id = n.nid');
  $query->condition('p.field_individual_participant_target_id', $nid);
  $query->addField('n', 'nid');

  return $query->execute()->fetchCol();
}

/**
 * Resolves measurements IDs associated with an individual encounter / session.
 *
 * @param int $nid
 *   Individual encounter node ID.
 *
 * @return array
 *   An array of measurements nodes IDs associated with the encounter.
 */
function hedley_person_load_individual_encounter_measurements_ids($nid) {
  $query = hedley_general_create_db_select_query_excluding_deleted();
  $encounter = node_load($nid);
  $bundle = $encounter->type;
  $encounter_field = "field_$bundle";
  $query->join("field_data_$encounter_field", 'p', 'p.entity_id = n.nid');
  $query->condition("p.{$encounter_field}_target_id", $encounter->nid);
  $query->addField('n', 'nid');

  return $query->execute()->fetchCol();
}

/**
 * Resolves all content that needs to be marked as 'deleted' for deleted person.
 *
 * We mark following bundles:
 *   - PMTCT Participants.
 *   - Individual Participants.
 *   - Relationships.
 *
 * @param int $person_id
 *   Child node ID.
 *
 * @return array
 *   List of nodes IDs to be marked as deleted.
 */
function hedley_person_content_affected_by_deletion($person_id) {
  $association_fields = [
    'field_person',
    'field_adult',
    'field_related_to',
  ];
  $entries = hedley_general_get_person_content_associated_by_fields($person_id, $association_fields);

  $bundles = [
    'pmtct_participant',
    'relationship',
    'individual_participant',
  ];

  $ids = [];
  foreach ($entries as $entry) {
    if (in_array($entry->bundle, $bundles)) {
      $ids[] = $entry->entity_id;
    }
  }

  return $ids;
}

/**
 * Get the patient's full name from a node.
 *
 * This function retrieves the patient's full name from a given node using
 * entity metadata wrappers. It first tries to fetch the values of the
 * 'field_first_name' and 'field_second_name' fields and constructs the full
 * name using them. If both fields are empty, it uses the node's label as the
 * patient's name.
 *
 * @param object $node
 *   The node object from which to retrieve the patient's name.
 *
 * @return string
 *   The patient's full name.
 *
 * @throws EntityMetadataWrapperException
 */
function hedley_person_get_paitent_name($node) {
  $wrapper = entity_metadata_wrapper('node', $node);
  $first_name = trim($wrapper->field_first_name->value());
  $second_name = trim($wrapper->field_second_name->value());
  if (empty($first_name) && empty($second_name)) {
    $second_name = $wrapper->label();
  }

  return empty($first_name) ? $second_name : "$second_name $first_name";
}
